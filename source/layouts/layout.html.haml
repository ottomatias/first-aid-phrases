!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= "#{current_page.data.title} - First Aid Phrasebook"
    = stylesheet_link_tag "normalize", "all"
    = javascript_include_tag  "https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js", "all"
    = partial "layouts/icons"
  %body{:class => page_classes}
    = partial "layouts/analytics"
    %nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#language-options-group", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"}
            Emergency Phrases
        #language-options-group.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              = link_to "Change Languages", "/"
    = yield
